{
    "name": "entrepreneur-ai-agent",
    "version": "1.0.0",
    "description": "Entrepreneur AI Agent monorepo for DHI subsidy applications",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd apps/backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "dev:frontend": "cd apps/web && npm run dev",
        "build": "npm run build:frontend",
        "build:frontend": "cd apps/web && npm run build",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd apps/backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
        "start:frontend": "cd apps/web && npm run start",
        "docker:up": "docker-compose up --build",
        "docker:down": "docker-compose down"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}